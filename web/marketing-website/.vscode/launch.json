  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Flask (HTTPS)",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "app.py",
        "FLASK_DEBUG": "1",
      },
      "args": [
        "run",
        "--no-debugger",
        "--host",
        "www.eave.dev",
        "--port",
        "5000",
        "--cert=${env:EAVE_HOME}/eave-dev-certs/eave.dev/cert.pem",
        "--key=${env:EAVE_HOME}/eave-dev-certs/eave.dev/key.pem"
      ],
      "jinja": true,
      "justMyCode": true
    },
    {
      "name": "Python: Flask (HTTP)",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "app.py",
        "FLASK_DEBUG": "1",
      },
      "args": [
        "run",
        "--no-debugger",
        "--host",
        "www.eave.dev",
        "--port",
        "5000",
      ],
      "jinja": true,
      "justMyCode": true
    }
  ]
}