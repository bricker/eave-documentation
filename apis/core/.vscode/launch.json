  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: FastAPI (HTTPS)",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "--host",
        "api.eave.dev",
        "--port",
        "5100",
        "--ssl-certfile",
        "${env:EAVE_HOME}/eave-dev-certs/eave.dev/cert.pem",
        "--ssl-keyfile",
        "${env:EAVE_HOME}/eave-dev-certs/eave.dev/key.pem",
        "--reload",
        "eave.app:app"
      ],
      "jinja": true,
      "justMyCode": true
    }
  ]
}