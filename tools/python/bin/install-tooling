#!/usr/bin/env sh

## Run this script to install this repostiory as a subtree into a repository.
## This script is a wrapper around the subtree command.

if test -z "$1"
then
    echo "Usage: install-tooling /path/to/my-repo"
    exit 1
fi

if ! test -d "$1"
then
    echo "Error: $1 is not a directory."
fi

git \
    -C "$1" \
    subtree \
    --squash \
    --prefix=tooling/python \
    add git@github.com:eave-fyi/eave-python-tooling.git main