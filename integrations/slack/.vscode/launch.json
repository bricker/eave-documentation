  "version": "0.2.0",
  "configurations": [
    {
      "name": "Slack App API",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "--host",
        "slack.eave.dev",
        "--port",
        "5200",
        "--ssl-certfile",
        "${env:EAVE_ROOT}/develop/certs/eave.dev/cert.pem",
        "--ssl-keyfile",
        "${env:EAVE_ROOT}/develop/certs/eave.dev/key.pem",
        "--reload",
        "eave.app:api"
      ],
      "jinja": true,
      "justMyCode": true
    },
    {
      "name": "Slack Socket Mode",
      "type": "python",
      "request": "launch",
      "program": "./src/socketmode.py",
      "console": "integratedTerminal",
      "justMyCode": true
    },
  ]
}