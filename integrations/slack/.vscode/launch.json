{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Python: FastAPI (HTTPS)",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "--host",
        "slack.eave.dev",
        "--port",
        "5200",
        "--ssl-certfile",
        "${env:EAVE_HOME}/eave-dev-certs/eave.dev/cert.pem",
        "--ssl-keyfile",
        "${env:EAVE_HOME}/eave-dev-certs/eave.dev/key.pem",
        "--reload",
        "eave.app:api"
      ],
      "jinja": true,
      "justMyCode": true
    },
    {
      "name": "Python: Slack socketmode",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/src/socketmode.py",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Python: pip install",
      "type": "python",
      "request": "launch",
      "program": "pip",
      "args": [
        "install",
        "-r",
        "requirements.txt",
        "-r",
        "requirements-dev.txt"
      ],
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ]
}