  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Python: Slack socketmode",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/src/socketmode.py",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "Python: pip install",
      "type": "python",
      "request": "launch",
      "program": "pip",
      "args": [
        "install",
        "-r",
        "requirements.txt",
        "-r",
        "requirements-dev.txt"
      ],
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ]
}