#!/usr/bin/env bash

set -eu

source "${EAVE_HOME}"/develop/functions.bash

cd "$(^parentpath)"
if js-allowed "$@"; then
	if ! ^onlythismodule; then
		"${EAVE_HOME}"/libs/eave-stdlib-ts/bin/setup
	fi

	"${EAVE_HOME}"/develop/javascript/_setup_base
fi

if ! ^ci; then
	"${EAVE_HOME}"/develop/shared/bin/build-dotenv src/config.ts
fi
