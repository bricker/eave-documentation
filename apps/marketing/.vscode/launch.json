{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Marketing Website (Server)",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "envFile": ".env",
      "args": [
        "--app",
        "'eave_server.app:create_app()'",
        "run",
        "--no-debugger",
        "--host",
        "localhost",
        "--port",
        "5000"
      ],
      "jinja": true,
      "justMyCode": true
    },
    {
      "name": "Marketing Website (Client)",
      "type": "node",
      "request": "launch",
      "envFile": ".env",
      "program": "./node_modules/.bin/webpack",
      "args": [
        "serve",
        "--port",
        "5001"
      ],
      "console": "integratedTerminal"
    },

  ],
  "compounds": [
    {
      "name": "Marketing Website",
      "configurations": [
        "Marketing Website (Client)",
        "Marketing Website (Server)"
      ],
      "stopAll": true
    }
  ]
}