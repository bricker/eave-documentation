#!/usr/bin/env bash

set -eu

source "${EAVE_HOME}"/develop/functions.bash

(
	cd "$(^parentpath)"
	if js-allowed "$@"; then
		"${EAVE_HOME}"/develop/javascript/_setup_base
	fi
	if py-allowed "$@"; then
		"${EAVE_HOME}"/develop/python/_setup_base
	fi
)

if js-allowed "$@"; then
	(
		cd "$(^parentpath)/typescript"
		"${EAVE_HOME}"/develop/javascript/_setup_base
	)
fi

if py-allowed "$@"; then
	(
		cd "$(^parentpath)/python"
		"${EAVE_HOME}"/develop/python/_setup_base
	)
fi
