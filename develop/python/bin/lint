#!/usr/bin/env bash

set -eu

source ${EAVE_HOME}/develop/shared/functions.bash
source ${EAVE_HOME}/develop/python/functions.bash
python-validate-version
python-activate-venv

statusmsg -i "(lint) isort..."
isort --quiet --check .

statusmsg -i "(lint) black..."
black --quiet --check .

statusmsg -i  "(lint) mypy..."
mypy .